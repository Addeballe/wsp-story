{% extends "layout.njk" %}

{% block content %}
<div class="story">
    <div class="top">
    <h1>{{ page.title }}</h1>
    <p>{{ page.description }}<p>
    </div>
    <ul>
        {% for choice in page.choices %}
            <li><a href="/story/{{ choice.target }}">{{ choice.text }}</a></li>
        {% else %}
            <p>Du har nått slutpunkten av min skrivförmåga.<p>
            <li><a href="/story">Börja om</a></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}